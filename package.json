    "api",
    "todo"
  ],
  "author": "Wignall, Shane M",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shanewignall/restful-backend-tutorial/issues"
  },
  "homepage": "https://github.com/shanewignall/restful-backend-tutorial#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "nodemon": "^1.15.1"
  },
  "dependencies": {
    "express": "^4.16.2",
    "mongoose": "^5.0.6"
  }
}
